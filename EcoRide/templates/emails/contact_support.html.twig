{% set safe_message = message|e('html')|nl2br %}
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Message de contact</title>
</head>
<body style="margin:0;padding:0;background:#f5f7f8;font-family:Arial,Helvetica,sans-serif;color:#1f2937;">
  <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background:#f5f7f8;padding:20px 0;">
    <tr>
      <td align="center">
        <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="600" style="background:#ffffff;border:1px solid #e5e7eb;border-radius:12px;overflow:hidden;">
          <tr>
            <td style="background:linear-gradient(90deg,#1db954,#9FC131);padding:16px 20px;color:#fff;font-weight:bold;font-size:18px;">
              EcoRide — Nouveau message de contact
            </td>
          </tr>
          <tr>
            <td style="padding:20px 20px 10px 20px;">
              <p style="margin:0 0 8px 0;font-size:16px;font-weight:bold;color:#111827;">Expéditeur</p>
              <p style="margin:0 0 12px 0;font-size:14px;color:#374151;">
                {{ name }}<br>
                <a href="mailto:{{ email }}" style="color:#1db954;text-decoration:none;">{{ email }}</a>
              </p>

              <p style="margin:0 0 8px 0;font-size:16px;font-weight:bold;color:#111827;">Objet</p>
              <p style="margin:0 0 12px 0;font-size:14px;color:#374151;">
                {{ subject }}
              </p>

              <p style="margin:0 0 8px 0;font-size:16px;font-weight:bold;color:#111827;">Message</p>
              <div style="background:#f9fafb;border:1px solid #e5e7eb;border-radius:8px;padding:12px;font-size:14px;color:#111827;line-height:1.5;">
                {{ safe_message|raw }}
              </div>
            </td>
          </tr>
          <tr>
            <td style="padding:16px 20px;border-top:1px solid #e5e7eb;font-size:12px;color:#6b7280;">
              Merci de répondre directement à l’expéditeur si nécessaire.
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>
</html>
