{% extends 'base.html.twig' %}

{% block title %}EcoRide — Contact{% endblock %}
{% block page_class %}page-contact{% endblock %}

{% block body %}
  <section class="layout-container contact-wrap" aria-labelledby="contact-title">
    <header class="contact-header">
      <h1 class="contact-title" id="contact-title">Contactez-nous</h1>
      <p class="contact-lead">Une question&nbsp;? Écrivez-nous, on vous répond vite.</p>
    </header>

    <div class="contact-card contact-infos">
      <article class="contact-info">
        <div class="contact-icon" aria-hidden="true">
          <svg viewBox="0 0 24 24">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07A19.5 19.5 0 0 1 3.15 9.81a19.79 19.79 0 0 1-3.07-8.63A2 2 0 0 1 2.06-.99h3a2 2 0 0 1 2 1.72c.12.86.33 1.69.63 2.48a2 2 0 0 1-.45 2.11L6.1 6.49a16 16 0 0 0 7.41 7.41l1.17-1.17a2 2 0 0 1 2.11-.45c.79.3 1.62.51 2.48.63A2 2 0 0 1 22 16.92z" fill="currentColor"></path>
          </svg>
        </div>
        <div class="contact-body">
          <h3 class="contact-label">Téléphone</h3>
          <a class="contact-link" href="tel:+33123456789">+33 1 23 45 67 89</a>
          <p class="contact-note">Lun–Ven, 9h–18h</p>
        </div>
      </article>

      <article class="contact-info">
        <div class="contact-icon" aria-hidden="true">
          <svg viewBox="0 0 24 24">
            <path d="M20 4H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2zm0 4-8 5L4 8V6l8 5 8-5z" fill="currentColor"></path>
          </svg>
        </div>
        <div class="contact-body">
          <h3 class="contact-label">E-mail</h3>
          <a class="contact-link" href="mailto:supportEcoRide@ecoride.fr">supportEcoRide@ecoride.fr</a>
          <p class="contact-note">Réponse sous 24h ouvrées</p>
        </div>
      </article>
    </div>

    <div class="contact-card contact-form">
      <h2 class="contact-form__title">Envoyez-nous un message</h2>
      <form
        action="{{ path('contact') }}"
        method="post"
        class="needs-validation"
        novalidate
      >
        <input type="hidden" name="_token" value="{{ csrf_token('contact_form') }}">
        <div class="row g-3">
          <div class="col-12 col-md-6">
            <label for="c-name" class="form-label">Votre nom</label>
            <input
              type="text"
              class="form-control"
              id="c-name"
              name="name"
              placeholder="Votre nom"
              value="{{ app.user ? (app.user.prenom ~ ' ' ~ app.user.nom) : '' }}"
              required
            >
          </div>
          <div class="col-12 col-md-6">
            <label for="c-email" class="form-label">Votre e-mail</label>
            <input
              type="email"
              class="form-control"
              id="c-email"
              name="email"
              placeholder="vous@exemple.com"
              value="{{ app.user ? app.user.email : '' }}"
              required
            >
          </div>
          <div class="col-12">
            <label for="c-subject" class="form-label">Objet</label>
            <input
              type="text"
              class="form-control"
              id="c-subject"
              name="subject"
              placeholder="Objet de votre message"
              required
            >
          </div>
          <div class="col-12">
            <label for="c-message" class="form-label">Votre message</label>
            <textarea
              class="form-control"
              id="c-message"
              name="message"
              rows="7"
              placeholder="Votre message"
              required
            ></textarea>
          </div>
          <div class="col-12">
            <button
              type="submit"
              class="btn btn-success w-100 d-inline-flex align-items-center justify-content-center gap-2"
            >
              <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true">
                <path d="M22 2 11 13" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round"></path>
                <path d="M22 2 15 22l-4-9-9-4Z" stroke="currentColor" stroke-width="2" fill="none" stroke-linejoin="round"></path>
              </svg>
              Envoyer
            </button>
          </div>
        </div>
      </form>
    </div>
  </section>
{% endblock %}
