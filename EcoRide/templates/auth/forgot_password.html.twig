{% extends 'base.html.twig' %}

{% block title %}EcoRide — Mot de passe oublié{% endblock %}

{% block page_class %}page-auth page-auth--forgot{% endblock %}

{% block body %}
  <section class="layout-container">
    <div class="auth-card">
      <h1 class="auth-title">Mot de passe oublié</h1>
      <p class="text-muted mb-3">
        Indiquez l’adresse e-mail associée à votre compte EcoRide. Nous vous enverrons un lien pour
        redéfinir votre mot de passe (valide 2&nbsp;heures).
      </p>

      {{ form_start(form, {
        attr: { class: 'row g-3 needs-validation', novalidate: 'novalidate' }
      }) }}
        {{ form_row(form.email) }}

        <div class="col-12 auth-actions justify-content-between">
          <a href="{{ path('login') }}" class="btn btn-outline-secondary">
            Retour à la connexion
          </a>

          <button type="submit" class="btn btn-success auth-submit">
            Envoyer le lien
          </button>
        </div>
      {{ form_end(form) }}
    </div>
  </section>
{% endblock %}
