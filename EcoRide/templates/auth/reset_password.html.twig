{% extends 'base.html.twig' %}

{% block title %}EcoRide — Nouveau mot de passe{% endblock %}

{% block page_class %}page-auth page-auth--reset{% endblock %}

{% block body %}
  <section class="layout-container">
    <div class="auth-card">
      <h1 class="auth-title">Définir un nouveau mot de passe</h1>
      <p class="text-muted mb-3">
        Votre nouveau mot de passe doit contenir au minimum 8 caractères, dont une majuscule,
        une minuscule, un chiffre et un caractère spécial.
      </p>

      {{ form_start(form, {
        attr: { class: 'row g-3 needs-validation', novalidate: 'novalidate' }
      }) }}
        {{ form_row(form.password.first) }}
        {{ form_row(form.password.second) }}

        <div class="col-12 auth-actions justify-content-between">
          <a href="{{ path('login') }}" class="btn btn-outline-secondary">
            Retour
          </a>

          <button type="submit" class="btn btn-success auth-submit">
            Mettre à jour
          </button>
        </div>
      {{ form_end(form) }}
    </div>
  </section>
{% endblock %}
